<p>
    Welcome to the Suggestion Page
    At ArtistSays, we value your voice as much as your artistry. This is the space where you can shape the future of our platform by sharing ideas, offering feedback, and suggesting ways to enhance the artistic experience for everyone.
</p>
@using (Html.BeginForm("Suggestion", "Home", FormMethod.Post))
{
    <div>
        <label>Name:</label>
        @Html.TextBox("name", null, new { @class = "form-control" })
    </div>
    <div>
        <label>Email:</label>
        @Html.TextBox("email", null, new { @class = "form-control", type = "email", placeholder = "Enter your email" })
    </div>
    <div>
        <label>Suggestion:</label>
        @Html.TextArea("suggestion", null, new { @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
}


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Suggestion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Suggestions != null)
        {
            foreach (var suggestion in ViewBag.Suggestions)
            {
                <tr>
                    <td>@suggestion.Name</td>
                    <td>@suggestion.Email</td>
                    <td>@suggestion.SuggestionText</td>
                    <td>
                        <a href="@Url.Action("Edit", "Home", new { id = suggestion.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Home", new { id = suggestion.Id })">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No suggestions found.</td>
            </tr>
        }
    </tbody>
</table>

