@model WebApplication4.Models.Review
@{
    ViewBag.Title = "Edit Review";
}

<h2>Edit Review</h2>
<style>
    body {
        background: linear-gradient(to right, #020000, #a81c51);
        min-height: 100vh;
        margin: 0;
        color: #ffffff;
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
    }

    .card-img-top {
        width: 100%; /* Ensures the image takes full width of the card */
        height: 300px; /* Set a fixed height */
        object-fit: cover; /* Ensures the image covers the area without distortion */
    }
</style>
@using (Html.BeginForm("EditReview", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReviewId)
    <div>
        <label>Reviewer Name:</label>
        @Html.TextBoxFor(model => model.ReviewerName, new { required = "required" })
    </div>
    <div>
        <label>Review Text:</label>
        @Html.TextAreaFor(model => model.ReviewText, new { required = "required" })
    </div>
    <div>
        <label>Rating (1-5):</label>
        @Html.TextBoxFor(model => model.Rating, new { type = "number", min = "1", max = "5", required = "required" })
    </div>
    <div>
        <label>Select Place:</label>
        @Html.DropDownListFor(model => model.PlaceId, new SelectList(ViewBag.Places, "PlaceId", "PlaceName"), "-- Select Place --", new { required = "required" })
    </div>
    <button type="submit">Update Review</button>
}
