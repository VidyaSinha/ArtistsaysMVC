<style>
    body {
        background: linear-gradient(to right, #020000, #a81c51);
        min-height: 100vh;
        margin: 50px;
        margin-top: 100px;
        margin-left: 150px;
        margin-right: 150px;
        color: #ffffff;
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
    }

    h2 {
        color: #020000;
    }

    .blog-post {
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 100px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        color: #000000;
    }

        /* Apply a different color for even and odd posts */
        .blog-post:nth-child(odd) {
            background-color: #ffffff; /* Dark blue */
        }

        .blog-post:nth-child(even) {
            background-color: #ffffff; /* Light blue */
        }

        /* Apply a different color for even and odd posts */
        .blog-post:nth-child(odd) {
            background-color: #ffffff; /* Dark blue */
        }

        .blog-post:nth-child(even) {
            background-color: #ffffff; /* Light blue */
        }

    /* Button Styles */
    .btn-primary {
        background: #a81c51;
        border: none;
        color: #252525;
        margin-bottom: 20px;
    }

        .btn-primary:hover {
            background-color: #ff006e;
        }

    /* Footer Styles */
    footer {
        background-color: rgba(0, 51, 102, 0.8);
        color: #ffffff;
        padding: 20px 0;
        margin-top: 20px;
    }

        footer h5 {
            margin-bottom: 10px;
            color: #00BFFF;
        }

        footer a {
            color: #00BFFF;
            text-decoration: none;
        }

    .container {
        max-width: 100%; /* Ensure the container takes the full width */
        padding: 0; /* Remove any padding */
        margin: 0 auto; /* Center the container if necessary */
    }

    footer a:hover {
        text-decoration: underline;
    }
</style>

<h2>@ViewBag.Title</h2>

<div>
    <a href="@Url.Action("Create", "Blog")" class="btn btn-primary">Add New Post</a>
</div>

@foreach (var post in Model)
{
    <div class="blog-post">
        <h3>@post.Title</h3>
        <p>Posted on: @post.PostDate.ToString("MMMM dd, yyyy")</p>
        <p>@post.Content</p>
    </div>
}

